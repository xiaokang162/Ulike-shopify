<style>
  .blog-info-box {
    padding: 80px 0;
    background: #f9f9f9;
    position: relative;
    z-index: 3;
  }
  
  .blog-info-box .blog-info-cont {
    display: flex;
    margin-top: 60px;
  }
  
  .blog-info-box .blog-info-left,
  .blog-info-box .blog-info-list {
    flex: 1;
  }
  
  .blog-info-box .blog-info-left {
    margin-right: 35px;
    position: relative;
    overflow: hidden;
  }
  
  .blog-info-box .blog-info-left .img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    margin: 0;
    position: relative;
    z-index: 1;
  }
  .blog-info-box .blog-info-left-txt {
    position: absolute;
    width: 100%;
    left: 0;
    bottom: 0;
    padding: 0 45px 50px 45px;
    z-index: 2;
    transform: translateY(90px);
    transition: 500ms cubic-bezier(0.7, 0, 0.3, 1);
  }
  .blog-info-box .blog-info-left-txt::before {
    position: absolute;
    content: "";
    display: block;
    width: 100%;
    height: 100%;
    left: 0;
    bottom: 0;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.5));
    z-index: -1;
  }
  
  .blog-info-box .blog-info-left:hover .blog-info-left-txt {
    transform: translateY(50px);
  }
  
  .blog-info-box .blog-info-left-txt::after {
    position: absolute;
    content: "";
    display: block;
    left: 30px;
    top: 0;
    width: 2px;
    height: 60px;
    background: #fff;
    transition: 500ms cubic-bezier(0.7, 0, 0.3, 1);
    transition-delay: 50ms;
  }
  .blog-info-box .blog-info-left:hover .blog-info-left-txt::after {
    height: 71%;
    top: -45px;
    transition-delay: 150ms;
  }
  .blog-info-box .blog-info-left-time {
    font-size: 20px;
    color: #fff;
    line-height: 1.2;
    transition: 500ms cubic-bezier(0.7, 0, 0.3, 1);
    transition-delay: 50ms;
  }
  
  .blog-info-box .blog-info-left:hover .blog-info-left-time {
    transform: translateY(-50px);
  }
  
  .blog-info-box .blog-info-left-title {
    font-size: 25px;
    line-height: 1.2;
    font-weight: bold;
    color: #fff;
    margin-top: 8px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    transition: 375ms cubic-bezier(0.7, 0, 0.3, 1);
    transition-delay: 50ms;
  }
  .blog-info-box .blog-info-left:hover .blog-info-left-title {
    transition-delay: 100ms;
    transform: translateY(-50px);
  }
  .blog-info-box .blog-info-left-p {
    font-size: 16px;
    color: #fff;
    margin-top: 25px;
  }
  
  .blog-info-box .blog-info-left-btn {
    width: 168px;
    height: 52px;
    color: #000;
    font-size: 16px;
    background: #fff;
    margin-top: 25px;
    transition: 375ms cubic-bezier(0.7, 0, 0.3, 1);
    transition-delay: 25ms;
    opacity: 0;
  }
  .blog-info-box .blog-info-left:hover .blog-info-left-btn {
    opacity: 1;
    transition-delay: 250ms;
    transform: translateY(-50px);
  }
  .blog-info-box .blog-info-left-btn::after {
    background: #000;
  }
  .blog-info-box .blog-info-left-btn:hover span,
  .blog-info-box .blog-info-left-btn:hover .btn-txt::before {
    color: #fff;
  }
  .blog-info-box .blog-info-item {
    display: flex;
    text-decoration: none;
    position: relative;
    margin-bottom: 24px;
  }
  .blog-info-box .blog-info-item:last-child {
    margin-bottom: 0;
  }
  
  .blog-info-box .blog-info-item:after {
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    z-index: -1;
  }
  .blog-info-box .blog-info-item:hover:after {
    animation: gradient-rectangle 1.4s 1;
    animation-delay: 0s;
    -webkit-animation-timing-function: cubic-bezier(0.785, 0.135, 0.15, 0.86);
    animation-timing-function: cubic-bezier(0.785, 0.135, 0.15, 0.86);
  }
  
  @-webkit-keyframes gradient-rectangle {
    0% {
      -webkit-transform: scaleX(0);
      transform: scaleX(0);
      -webkit-transform-origin: left;
      transform-origin: left;
      background: #fff;
    }
  
    49.9% {
      -webkit-transform: scaleX(1);
      transform: scaleX(1);
      -webkit-transform-origin: left;
      transform-origin: left;
      background: #fff;
    }
  
    50% {
      -webkit-transform: scaleX(1);
      transform: scaleX(1);
      -webkit-transform-origin: right;
      transform-origin: right;
      background: #fff;
    }
  
    100% {
      -webkit-transform: scaleX(0);
      transform: scaleX(0);
      -webkit-transform-origin: right;
      transform-origin: right;
      background: #fff;
    }
  }
  
  .blog-info-box .blog-info-item::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: 0;
    z-index: 0;
  }
  
  .blog-info-box .blog-info-item:hover:before {
    animation: gradient-rectangle1 1.4s 1;
    animation-delay: 0s;
    -webkit-animation-timing-function: cubic-bezier(0.785, 0.135, 0.15, 0.86);
    animation-timing-function: cubic-bezier(0.785, 0.135, 0.15, 0.86);
  }
  
  @-webkit-keyframes gradient-rectangle1 {
    0% {
      -webkit-transform: scaleX(0);
      transform: scaleX(0);
      -webkit-transform-origin: left;
      transform-origin: left;
      background: #000;
    }
  
    49.9% {
      -webkit-transform: scaleX(1);
      transform: scaleX(1);
      -webkit-transform-origin: left;
      transform-origin: left;
      background: #000;
    }
  
    50% {
      -webkit-transform: scaleX(1);
      transform: scaleX(1);
      -webkit-transform-origin: right;
      transform-origin: right;
      background: #000;
    }
  
    100% {
      -webkit-transform: scaleX(0);
      transform: scaleX(0);
      -webkit-transform-origin: right;
      transform-origin: right;
      background: #000;
    }
  }
  
  .blog-info-box .blog-info-item-time {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 26px 0;
    width: 88px;
    background: #fff;
    color: #000;
  }
  
  .blog-info-box .blog-info-item-num {
    font-size: 30px;
    line-height: 1.2;
  }
  
  .blog-info-box .blog-info-item-m {
    font-size: 20px;
    font-weight: bold;
    line-height: 1.2;
  }
  .blog-info-box .blog-info-item-txt {
    padding: 10px 0;
    flex: 1;
    margin-left: 35px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
    padding-right: 70px;
  }
  
  .blog-info-box .blog-info-item-title {
    position: relative;
    font-size: 20px;
    color: #000;
    font-weight: bold;
    line-height: 1.2;
  }
  .blog-info-box .blog-info-item-txt .link-img {
    position: absolute;
    right: -45px;
    top: 0;
    transform: translateX(-10px);
    opacity: 0;
    transition: all 0.4s ease;
  }
  .blog-info-box .blog-info-item:hover .link-img {
    transform: translateX(0px);
    opacity: 1;
  }
  .blog-info-box .blog-info-item-p {
    font-size: 14px;
    color: #9e9d9d;
    line-height: 1.2;
    margin-top: 15px;
    max-width: 415px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
  }
  .blog-info-box .blog-info-item-p p {
    margin: 0;
  }
  
  @media (max-width: 1300px) {
    .blog-info-box .blog-info-left-time {
      font-size: 16px;
    }
    .blog-info-box .blog-info-left-title {
      font-size: 20px;
    }
    .blog-info-box .blog-info-item-title {
      font-size: 18px;
    }
    .blog-info-box .blog-info-item-p {
      margin-top: 10px;
    }
    .blog-info-box .blog-info-item-time {
      padding: 15px 0;
    }
    .blog-info-box .blog-info-item-num {
      font-size: 25px;
    }
    .blog-info-box .blog-info-item-m {
      font-size: 18px;
    }
  }
  
  @media (max-width: 991px) {
    .blog-info-box {
      padding: 50px 0;
    }
    .blog-info-box .blog-info-left-txt {
      padding: 0 15px 20px 15px;
      transform: translateY(68px);
    }
    .blog-info-box .blog-info-left-txt::after {
      width: 1px;
      left: 10px;
      height: 48px;
    }
    .blog-info-box .blog-info-left:hover .blog-info-left-txt::after {
      height: 88%;
    }
    .blog-info-box .blog-info-cont {
      flex-direction: column;
      margin-top: 40px;
    }
    .blog-info-box .blog-info-left {
      margin-right: 0;
      margin-bottom: 24px;
    }
    .blog-info-box .blog-info-left-time {
      font-size: 14px;
    }
    .blog-info-box .blog-info-left-title {
      font-size: 18px;
    }
    .blog-info-box .blog-info-left-btn {
      width: 140px;
      height: 45px;
      margin-top: 20px;
    }
    .blog-info-box .blog-info-item-time {
      width: 70px;
    }
    .blog-info-box .blog-info-item-num {
      font-size: 20px;
    }
    .blog-info-box .blog-info-item-m {
      font-size: 16px;
    }
    .blog-info-box .blog-info-item-txt {
      margin-left: 15px;
      padding: 3px 0;
      padding-right: 40px;
    }
    .blog-info-box .blog-info-item-txt .link-img {
      right: -30px;
    }
    .blog-info-box .blog-info-item-title {
      font-size: 16px;
    }
    .blog-info-box .blog-info-item-p {
      margin-top: 6px;
    }
  }
</style>
<section class="section-box">
  <div class="blog-info-box">
    <div class="container">
      <div class="title-diy text-top">{{section.settings.title}}</div>
      <div class="blog-info-cont">
        {%- for block in section.blocks -%}
          {% case block.type %}
            {% when 'image' %}
              <a href="{{ block.settings.link }}" class="blog-info-left to-top" style="transition-delay: 0.{{forloop.index}}s">
                {%- if block.settings.image != blank -%}
                  <img loading="lazy" class="img" width="{{ block.settings.image.width }}" height="{{ block.settings.image.height }}" {%
                    render 'image-attributes' , image: block.settings.image %} alt="{{ block.settings.image.alt | escape }}">
                {%- endif -%}
                <div class="blog-info-left-txt">
                  {%- if block.settings.text != blank -%}
                    <div class="blog-info-left-time text-top">{{ block.settings.text }}</div>
                  {%- endif -%}
                  {%- if block.settings.content != blank -%}
                    <div class="blog-info-left-title text-top">{{ block.settings.content }}</div>
                  {%- endif -%}
                  {%- if block.settings.btn_text != blank -%}
                    <div class="blog-info-left-btn btn-diy">
                      <div class="btn-txt" text="{{ block.settings.btn_text }}">
                        <span>{{ block.settings.btn_text }}</span>
                      </div>
                    </div>
                  {%- endif -%}
                </div>
              </a>
          {% endcase %}
        {%- endfor -%}
        <div class="blog-info-list">
          {%- for block in section.blocks -%}
            {% case block.type %}
              {% when 'text' %}
              <a href="{{ block.settings.link }}" class="blog-info-item to-top" style="transition-delay: 0.{{forloop.index}}s">
                <div class="blog-info-item-time">
                  <div class="blog-info-item-num text-top">{{ block.settings.text }}</div>
                  <div class="blog-info-item-m text-top">{{ block.settings.text1 }}</div>
                </div>
                <div class="blog-info-item-txt">
                  <div class="blog-info-item-title text-top">{{ block.settings.title }}
                    {%- if block.settings.image != blank -%}
                      <img loading="lazy" class="link-img" width="{{ block.settings.image.width }}" height="{{ block.settings.image.height }}" {%
                        render 'image-attributes' , image: block.settings.image %} alt="{{ block.settings.image.alt | escape }}">
                    {%- endif -%}
                  </div>
                  <div class="blog-info-item-p text-top">
                    {{ block.settings.content }}
                  </div>
                </div>
              </a>
            {% endcase %}
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</section>
