    position: relative;
  }
  .diy-access-page .diy-access-cont{
    position: absolute;
    width: 89%;
    max-width: 695px;
    z-index: 2;
    left: 60px;
    top: 50%;
    transform: translateY(-50%);
    padding: 60px 54px 45px 54px;
    background: #fff;
  }
  .diy-access-page .img-bg{
    position: relative;
    z-index: 1;
    display: block;
    width: 100%;
    height: auto;
  }
  .diy-access-page .header-container{
    max-width: none;
  }

  .diy-access-page .join-page-header{
    font-size: 44px;
    color: #3F3636;
    line-height: 1.2;
  }

  .diy-access-page .sub-header{
    color: #3F3636;
    font-size: 18px;
    line-height: 1.3;
    margin-top: 16px;
    margin-bottom: 28px;
  }

  .diy-access-page .join-page-form-container{
    max-width: none;
    border: 0;
    width: 100%;
    border: 0;
    background: 0;
  }

  .diy-access-page #access_page_first_name_input,.diy-access-page #access_page_email_input{
  height: 55px;
  border: 0;
  border: 1px solid #737577;
  color: #737577;
  font-size: 18px;
  margin-bottom: 20px;
  box-shadow: none;
  border-radius: 0;
}

.diy-access-page .join-page-submit-button{
  height: 55px !important;
  font-size: 16px !important;
  border-radius: 0;
  margin-bottom: 50px !important;
  font-weight: 570;
}

.diy-access-page .join-jg{
  color: #3F3636;
  font-size: 20px;
  font-weight: 570;
  line-height: 1;
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 35px;
}

.diy-access-page .join-jg span{
  display: block;
  flex: 1;
  height: 1px;
  background: #737577;
}

.diy-access-page .how-it-works-step{
  color: #3F3636;
  text-align: center;
  font-size: 14px;
