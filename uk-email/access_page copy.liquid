<div class="diy-access-page">
  <div class="diy-access-cont">
    <div class="mt-md align-center" style="display: none;">
      {% if settings.logo_image and settings.logo_image != "" %}
        <img class="logo_image_fixed_top_bar" src="{{ settings.logo_image }}"/>
      {% else %}
        <h3 class="mb-no shop-name">
          {{ campaign.shop_name }}
        </h3>
      {% endif %}
    </div>
    {% if settings.banner_image and settings.banner_image != "" and settings.remove_banner_from %}
      {% unless settings.remove_banner_from contains 'Join Page' %}
        <div class="grid-x align-center">
          <div class="mt-sm small-12 medium-8 large-5 cell">
            <img alt="banner_image" class="banner_image" src="{{ settings.banner_image }}" />
          </div>
        </div>
      {% endunless %}
    {% endif %}
    <div class="grid-x align-center">
      <div class="large-12 medium-12 small-12 cell header-container">
        <div class="join-page-header">
          {% if campaign.state != 'paused' %}
            {{ "page.access_page.header" | t }}
          {% else %}
            {{ "page.access_page.paused_header" | t }}
          {% endif %}
        </div>
          <div class="sub-header">
            {% if campaign.state != 'paused' %}
              {% if offer_setup.description != 'none' %}
                {{ "page.access_page.subtitle_offer_description" | t }}
              {% endif %}
              {{ "page.access_page.description" | t }}
            {% else %}
              {{ "page.access_page.paused_subtitle_offer_description" | t }}
            {% endif %}
          </div>
      </div>
    </div>

    {% if campaign.state != 'paused' %}
      <div class="grid-x grid-padding-x align-center">
        <div class="join-page-form-container">
          <div>
            {% form 'registration_form' %}
              <div>
                <label id="access_page_email_label" for="email" style="display: none;">
                  <span class="join-page-form-label-name">
                    {{ 'page.access_page.signup_form_email_label' | t }}
                  </span>
                </label>
                <input id="access_page_email_input" class="has-tip" name="email" type="email" placeholder="{{ 'page.access_page.signup_form_email_placeholder' | t }}" required tabindex="2"/>
                <label for="email" style="display: none;">
                  <span class="join-page-form-label-description">
                    {{ 'page.access_page.signup_form_email_label_description' | t }}
                  </span>
                </label>
                <label for="first_name" style="display: none;">
                  <span class="join-page-form-label-name">
                    {{ 'page.access_page.signup_form_name_label' | t }}
                  </span>
                </label>
                <input id="access_page_first_name_input" class="has-tip" name="first_name" type="text" placeholder="{{ 'page.access_page.signup_form_name_placeholder' | t }}" tabindex="2"/>
                <label for="first_name" style="display: none;">
                  <span class="join-page-form-label-description">
                    {{ 'page.access_page.signup_form_name_label_description' | t }}
                  </span>
                </label>
              </div>
              <button class="button join-page-submit-button" type="submit">
                {{ 'page.access_page.signup_form_submit' | t }}
              </button>
            {% endform %}
          </div>
        </div>
      </div>
      <div class="join-jg">
        How to Join <span></span>
      </div>
      <div class="grid-x grid-padding-x align-center">
        <div class="small-12 medium-12 large-12 grid-x icon-container">
          <div class="small-4 medium-4 cell">
            <div>
              <div class="how-it-works-icon-background">
                <img data-interchange="[https://cdn.shopify.com/s/files/1/0740/5882/6015/files/2_89181958-8da4-4d0a-922f-8456eb431b1a.png, small], [https://cdn.shopify.com/s/files/1/0740/5882/6015/files/2_89181958-8da4-4d0a-922f-8456eb431b1a.png, medium]" class="how-it-works-icon"/>
              </div>
              <div class="how-it-works-step">Step 1</div>
              <div class="how-it-works-txt">{{ "common.how_it_works_section.share_link_text" | t }}</div>
            </div>
          </div>
          <div class="small-4 medium-4 cell">
            <div>
              <div class="how-it-works-icon-background">
                <img data-interchange="[https://cdn.shopify.com/s/files/1/0740/5882/6015/files/1_7ec96903-7e00-4e87-a6fe-765a613b0cae.png, small], [https://cdn.shopify.com/s/files/1/0740/5882/6015/files/1_7ec96903-7e00-4e87-a6fe-765a613b0cae.png, medium]" class="how-it-works-icon"/>
              </div>
              <div class="how-it-works-step">Step 2</div>
              <div class="how-it-works-txt">{{ "common.how_it_works_section.friend_buys_text" | t }}</div>
            </div>
          </div>
          <div class="small-4 medium-4 cell">
            <div>
              <div class="how-it-works-icon-background">
                <img data-interchange="[https://cdn.shopify.com/s/files/1/0740/5882/6015/files/3_cae3bc6e-7d03-42bf-a215-ed47bbc8f9f5.png, small], [https://cdn.shopify.com/s/files/1/0740/5882/6015/files/3_cae3bc6e-7d03-42bf-a215-ed47bbc8f9f5.png, medium]" class="how-it-works-icon"/>
              </div>
              <div class="how-it-works-step">Step 3</div>
              <div class="how-it-works-txt">{{ "common.how_it_works_section.get_rewarded_text" | t }}</div>
            </div>
          </div>
        </div>
      </div>
      <div class="join-bt-msg">
        * Offer applies only to UK residents 18+. See <a href="">Ulike Referral Program Terms</a> for complete details.
      </div>
    {% else %}
      <!-- "Shop Now" CTA button when campaign is paused -->
      <div class="grid-x align-center">
        <div class="small-6 medium-3 cell">
          <!-- Button same style for consistency with share page -->
          <a href="{{ campaign.shop_url }}" class="button view-rewards-button">{{ "page.access_page.paused_cta_button" | t }}</a>
        </div>
      </div>
    {% endif %}
  </div>
  <picture>
    <source srcset="https://cdn.shopify.com/s/files/1/0740/5882/6015/files/BG_d7cf1ba6-6ec2-4f4f-a692-999682250d71.jpg" media="(max-width: 991px)">
    <img class="img-bg" src="https://cdn.shopify.com/s/files/1/0740/5882/6015/files/banner_1_4e66cfb5-e836-4d1f-bc42-cae461f8c03f.jpg">
  </picture>
</div>

<style>
