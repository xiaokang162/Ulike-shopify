      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
    });

    $(document).on('click', '.box-collapsible-bar .item .box-head', function () {
      var item = $(this).closest('.item');
      console.log($(item).find('.box-detail').is(":hidden"));
      if($(item).find('.box-detail').is(":hidden")){
        $(this).find('.add').fadeTo( "slow", 0);
        $(this).find('.minus').fadeTo( "slow", 1);
      } else {
        $(this).find('.add').fadeTo( "slow", 1);
        $(this).find('.minus').fadeTo( "slow", 0);
      }
      $(item).find('.box-detail').slideToggle('slow');
    });

  });

  var countdownInterval = null;
  function startCountdown(endTime, $element,$groupElement,callback) {
    countdownInterval = setInterval(function () {
      // 获取当前时间
      let now = new Date();
      // 计算剩余时间（毫秒）
      let difference = endTime - now;
      // 如果时间到了，清除定时器并输出结束信息
      if (difference <= 0) {
          clearInterval(countdownInterval);
          countdownInterval = null
          if (typeof callback === 'function') {
            callback();
          }
          return;
      }
      const days = Math.floor(difference / (1000 * 60 * 60 * 24));
      const hours = Math.floor((difference % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((difference % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((difference % (1000 * 60)) / 1000);

      var displayMinutes = minutes < 10 ? '0' + minutes : minutes;
      var displaySeconds = seconds < 10 ? '0' + seconds : seconds;
      var displayHours = hours < 10 ? '0' + hours : hours;

      var displayDays = days > 0 ? days + ':' : '';
      var newTime = displayDays + displayHours +  ':' + displayMinutes + ':' + displaySeconds + '';
      // 淡出旧时间，更新文本，然后淡入新时间
      $element.html(newTime).fadeIn(200);
      $($groupElement).find('.countdown-hours').text(displayHours);
      $($groupElement).find('.countdown-minutes').text(displayMinutes);
      $($groupElement).find('.countdown-seconds').text(displaySeconds);
    }, 1000);
  }

  {% comment %} 置底栏 {% endcomment %}
  function fixBottomBar() {
    var topBar = $("#top-bar");
    let barTop = $('#product-components').offset().top + 150;
    $(window).scroll(function() {
      if ($(this).scrollTop() > barTop) {
          topBar.addClass("toolbar-fixed");
      } else {
          topBar.removeClass("toolbar-fixed");
      }
    });
  }

  function randomName() {
    var userCount = parseInt(localStorage.getItem("userCount")) || Math.floor(Math.random() * 500);
    userCount += Math.floor(Math.random() * 4); // 每次增加0到5之间的随机整数
    if (userCount >= 999) {
      userCount = 6; // 如果超过1000，将数字重置为10
    }
    localStorage.setItem("userCount", userCount);
    // 随机生成用户名称，3个词左右后面跟xxx
    var userNames = ["Emily", "Charlotte", "Amelia", "Mia", "Harper", "Evelyn", "Abigail", "Ella", "Scarlett", "Grace", "Chloe", "Victoria", "Madison", "Avery", "Sofia", "Camila", "Aria", "Lily", "Zoey", "Riley", "Nora", "Hazel", "Ellie", "Stella", "Natalie", "Zoe", "Leah", "Audrey", "Savannah", "Brooklyn"];
    var randomIndex= Math.floor(Math.random() * userNames.length)
    var userName = userNames[randomIndex].substring(0, 3);
    userName += '**';
    $('.group-sharing .user span').text(userCount);
    $('.group-sharing .winning-info .name').text(userName);
    $('.a10-product-cart-group .name lable').text(userName);

    var endTime = new Date(new Date().getTime() + 15 * 60000).getTime();

     // 倒计时
     var $countdownGroup = $('.winning-info .time');
     var $countdown = $('.box-countdown .countdown');
      startCountdown(endTime,$countdownGroup, $countdown, function () {
        location.reload();
      });
    setCookie('groupName', userName, 1);
    setCookie('groupTime', endTime, 1);
  }
</script>

