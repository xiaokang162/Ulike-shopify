<style>
  .preface-box {
    padding: 100px 0;
    background: #f9f9f9;
    position: relative;
    z-index: 3;
  }

  .preface-box .preface-cont {
    display: flex;
    max-width: 1400px;
    margin: 0 auto;
  }

  .preface-box .preface-left {
    width: 43.6%;
    border-right: 1px solid #e4e4e4;
    padding-right: 30px;
  }

  .preface-box .preface-title {
    font-size: 40px;
    font-weight: bold;
    color: #000;
    line-height: 1.2;
    max-width: 390px;
  }

  .preface-box .preface-right {
    flex: 1;
    font-size: 25px;
    color: #525252;
    line-height: 1.8;
    padding-left: 118px;
  }

  .preface-box .preface-right p {
    margin: 0;
  }

  @media(max-width: 1300px) {
    .preface-box .preface-right {
      padding-left: 60px;
    }
    .preface-box .preface-title {
      max-width: none;
    }
  }

  @media(max-width: 991px) {
    .preface-box {
      padding: 50px 0;
    }
    .preface-box .preface-cont {
      flex-direction: column;
    }
    .preface-box .preface-left {
      width: 100%;
      border: 0;
      padding: 0;
    }
    .preface-box .preface-title {
      font-size: 28px;
    }
    .preface-box .preface-right {
      padding: 0;
      margin-top: 20px;
      font-size: 18px;
      line-height: 1.6;
    }
  }
</style>
<section class="section-box">
  <div class="preface-box">
    <div class="container">
      <div class="preface-cont">
        <div class="preface-left">
          <div class="preface-title text-top">{{ section.settings.title }}</div>
        </div>
        <div class="preface-right text-top">
          {{ section.settings.content }}
        </div>
      </div>
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "preface-diy",
    "class": "preface-diy",
    "blocks": [],
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      }, {
        "type": "richtext",
        "id": "content",
        "label": "Content"
      }
    ],
    "presets": [
      {
        "name": "preface-diy",
        "blocks": []
      }
    ]
  }
{% endschema %}