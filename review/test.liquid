    });
    const galleryTop = new Swiper('.myGallery', {
      spaceBetween: 10,
      {% comment %} pagination: {
        el: '.swiper-pagination',
      }, {% endcomment %}
      loop: true,
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
