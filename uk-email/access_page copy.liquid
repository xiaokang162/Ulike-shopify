  .diy-access-page .diy-access-cont{
    left: 50%;
    transform: translateX(-50%);
    top: 17%;
    padding: 40px 12px 45px 12px;
  }

  .diy-access-page .join-page-header{
    font-size: 26px;
  }
  .diy-access-page .sub-header{
    font-size: 12px;
    margin-top: 10px;
    margin-bottom: 23px;
  }

  .diy-access-page #access_page_first_name_input, .diy-access-page #access_page_email_input{
    height: 38px;
    font-size: 12px;
    margin-bottom: 14px;
  }

  .diy-access-page .join-page-submit-button{
    height:38px !important;
    font-size: 12px !important;
    margin-bottom: 27px !important;
  }
  .diy-access-page .join-jg{
    font-size: 14px;
    margin-bottom: 25px;
  }

  .diy-access-page .how-it-works-icon-background{
    width: 40px;
  }
  .diy-access-page .how-it-works-step{
    font-size: 12px;
  }

  .diy-access-page .how-it-works-txt{
    font-size: 12px;
  }
  .diy-access-page .join-bt-msg{
    margin-top: 23px;
    text-align: left;
    font-size: 12px;
  }
}
</style>