.diy-access-page .how-it-works-txt{
  color: #3F3636;
  text-align: center;
  font-size: 14px;
  line-height: 1.2;
  margin-top: 5px;
}

.diy-access-page .how-it-works-icon-background{
  border-radius: 0;
  background: none;
  width: 57px;
  margin: 0 auto;
}

.diy-access-page .how-it-works-icon-background .how-it-works-icon{
  margin: 0;
}

.diy-access-page .join-bt-msg{
  color: #3F3636;
  font-size: 14px;
  line-height: 1.2;
  letter-spacing: -0.196px;
  text-align: center;
  margin-top: 26px;
}
.diy-access-page .join-bt-msg a{
  font-weight: 570;
  color: #3F3636;
  text-decoration: underline;
}
